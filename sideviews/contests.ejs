    </div>
    <!-- onMouseOver="this.style.cursor='pointer';this.style.transform='scale(1.1)';" -->
    <% contests.forEach((contest)=>{%>
      <div 
        onmouseout="this.style.transform='scale(1)';" style="background-color: aquamarine;"
        class="text-center my-2 contest-name">
        <div style="display: flex;justify-content:space-evenly;">
          <a href="/api/contest/crud/<%=contest.name%>/participants">
            <h5>
              <%=contest.name%>
            </h5>
          </a>
          <h5><%=contest.date%></h5>
        </div>
        
      </div>
      <%})%>
